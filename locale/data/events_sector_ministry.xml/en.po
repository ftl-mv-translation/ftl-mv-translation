#: src-en/data/events_sector_ministry.xml:753
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[1]/event/choice[@req=\"cloaking\"]/text"
msgstr ""
"(Cloaking) Cloak and loot some of the buildings while everyone is "
"distracted."

#: src-en/data/events_sector_ministry.xml:755
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[1]/event/choice[@req=\"cloaking\"]/event/text"
msgstr ""
"You swoop down to collect some supplies as quickly as possible before "
"leaving."

#: src-en/data/events_sector_ministry.xml:760
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[1]/event/choice[4]/text"
msgstr "Pull away quickly."

#: src-en/data/events_sector_ministry.xml:766
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[2]/text"
msgstr "This isn't our business, ignore them."

#: src-en/data/events_sector_ministry.xml:768
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[2]/event/text"
msgstr ""
"It's not your duty to get involved in the business of everyone else you "
"encounter. You ignore the chaos below."

#: src-en/data/events_sector_ministry.xml:770
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[2]/event/choice[1]/text"
msgstr "Do something onboard the ship."

#: src-en/data/events_sector_ministry.xml:774
msgid ""
"data/events_sector_ministry.xml$//event[@name=\"ZOLTAN_REVOLT\"]/choice[2]/event/choice[2]/text"
