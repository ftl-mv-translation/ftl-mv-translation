	<ship load="SHIP_CIVILIAN_CARRYSHIP_DAMAGED" hostile="false"/>
	<choice hidden="true">	
		<text>Dock with the ship and save as many of the crew as you can.</text>
		<event load="CIVILIAN_EXPLODED_HELP"/>
	</choice>
	<choice hidden="true" req="LIFE_SCANNER">	
