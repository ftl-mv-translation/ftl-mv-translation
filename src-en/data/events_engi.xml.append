<event name="HARMONY_LINK_DEFAULT" unique="true">
	<preventQuest/>
	<beaconType id="map_icon_link" global="false">
		<color r="137" g="142" b="148" a="1.0"/>
		<unvisitedTooltip>This is the location of a Harmony Link.</unvisitedTooltip>
		<visitedTooltip>This is the location of a Harmony Link.</visitedTooltip>
	</beaconType>
	<text>It appears you've discovered a Harmony Link. These massive planet-sized structures are made up of trillions of nanobots, and transmit a strong signal to all of the Engi in the sector.</text>
	<img back="BACK_EVENT_HARMONYLINK" planet="NONE"/>
	<choice hidden="true" lvl="1" req="HARMONY_LINK_CHECK" max_group="1" blue="false">
		<text>Continue...</text>
		<event load="HARMONY_LINK_EVENTS"/>
	</choice>
	<choice hidden="true" lvl="0" req="HARMONY_LINK_CHECK" max_group="1" blue="false">
		<text>Continue...</text>
		<event load="HARMONY_LINK_EVENTS_NOANCIENT"/>
	</choice>
</event>
